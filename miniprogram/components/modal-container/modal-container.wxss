.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 100;
}

.modal-mask .modal-box {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 1;
	border-radius: 10rpx;
	width: 560rpx;
}

.modal-mask .modal-image {
	width: 100%;
	height: 100%;
	border-radius: 30rpx;
	overflow: hidden;
}

.modal-mask .modal-btn-close {
	position: absolute;
	top: -56rpx;
	right: -56rpx;
	width: 56rpx;
	height: 56rpx;
	background-image: url(https://p0.meituan.net/travelcube/92eb1a7835a893209210aeaa04fe51821278.png);
	background-size: 100%;
	background-repeat: no-repeat;
}

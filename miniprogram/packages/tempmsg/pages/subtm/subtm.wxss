.tmpl-list {
	padding: 30rpx;
}

.tmpl-list .title {
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}

.tmpl-list .tmpl-boxs {
	display: flex;
	flex-direction: column;
    justify-content: flex-start;
    align-items: left;
}

.tmpl-list .tmpl-item {
	display: flex;
	flex-direction: row;
    justify-content: flex-start;
	align-items: center;
	margin-top: 20rpx;
}

.tmpl-list .tmpl-item-img {
	width: 30rpx;
	height: 30rpx;
	margin-right: 20rpx;	
	border-radius: 50%;
}

.tmpl-list .tmpl-item-title {
	font-size: 28rpx;
}
.container {
	padding: 40rpx 40rpx;
}

.btn-qrcode {
	width: 340rpx;
	height: 80rpx;
	color: #ffffff;
	background-color: #1aad19;
	margin: 40rpx auto;
	border-radius: 8rpx;
}

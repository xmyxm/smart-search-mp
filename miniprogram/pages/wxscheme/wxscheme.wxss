.container {
	padding: 30rpx;
}

.title,
.option-title {
	font-size: 28rpx;
}

.mt40 {
	margin-top: 40rpx;
}

.poi-type {
	margin-top: 40rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
}

.poi-box {
	display: flex;
	justify-content: center;
	align-items: center;
	white-space: nowrap;
	padding-right: 24rpx;
}

.poi-name {
	margin-left: 4rpx;
}


.platform {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 40rpx;
}

.platform-box {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 160rpx;
	border-radius: 20rpx;
	padding: 20rpx;
}

.box-select {
	background-color: #e1e1e1;
}

.platform-icon {
	overflow: hidden;
	width: 68rpx;
	height: 68rpx;
	border-radius: 50%;
}

.platform-name {
	font-size: 28rpx;
	line-height: 36rpx;
	height: 36rpx;
	margin-top: 6rpx;
}

.user-path {
	margin-top: 40rpx;
	min-height: 200rpx;
	width: 100%;
	background-color: #e1e1e1;
	border-radius: 16rpx;
	padding: 20rpx;
	color: #515151;
}

.user-query {
	margin-top: 40rpx;
	min-height: 200rpx;
	width: 100%;
	background-color: #e1e1e1;
	border-radius: 16rpx;
	padding: 20rpx;
	color: #515151;
}

.btn-list {
	margin-top: 40rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.btn-use {
	line-height: 40rpx;
	color: #ffffff;
	background-color: #1aad19;
	border-radius: 8rpx;
	text-align: center;
	padding: 20rpx 10rpx;
}

.btn-use {
	width: 30%;
}

.option-box {
	margin-top: 40rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.option-name {
	font-size: 14px;
}

.option-icon {
	font-size: 12rpx;
	border-radius: 8rpx;
	background-color: #e1e1e1;
	padding: 8rpx 12rpx;
}
